            <ul class="nav nav-tabs flex-column">
                @if (special_meal != null)
                {
                    Boolean isFirst = true;
                    @foreach (var item_special in special_meal)
                    {
                        @if (isFirst)
                        {
                            <li class="nav-item">
                                <a class="nav-link active show" data-bs-toggle="tab" href="#tab-@item_special.Id">@item_special.meal.Name</a>
                            </li>
                            isFirst = false;
                        }
                        else
                        {
                            <li class="nav-item">
                                        <a class="nav-link" data-bs-toggle="tab" href="#tab-@item_special.Id">@item_special.meal.Name</a>
                            </li>
                        }
                    }
                }
              
            </ul>
          </div>
          <div class="col-lg-9 mt-4 mt-lg-0">
            <div class="tab-content">
                @if (special_meal != null)
                {
                    Boolean isFirst = true;
                    @foreach (var item_special in special_meal)
                    {
                        @if (isFirst)
                        {
                            <div class="tab-pane active show" id="tab-@item_special.Id">
                                <div class="row">
                                    <div class="col-lg-8 details order-2 order-lg-1">
                                        <h3>@item_special.meal.Name</h3>
                                                <p class="fst-italic"> BRIEF INFORMATION </p>
                                        <p>@item_special.Detail</p>
                                    </div>
