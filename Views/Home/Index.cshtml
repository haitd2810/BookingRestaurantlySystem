    <!-- ======= Menu Section ======= -->
    <section id="menu" class="menu section-bg">
      <div class="container" data-aos="fade-up">

        <div class="section-title">
          <h2>Menu</h2>
          <p>Check Our Tasty Menu</p>
        </div>
        
        <div class="row" data-aos="fade-up" data-aos-delay="100">
          <div class="col-lg-12 d-flex justify-content-center">
            <ul id="menu-flters">
                <li data-filter="*" class="filter-active">All</li>
                        @if (category != null)
                        {
                            @foreach (var item in category)
                            {
                                <li data-filter=".filter-@item.Name.ToLower()">@item.Name</li>
                            }
                        }
                    </ul>
          </div>
        </div>

        <div class="row menu-container" data-aos="fade-up" data-aos-delay="200">
                @if (meal != null)
                {
                    @foreach (var item_meal in meal)
                    {
                        <div class="col-lg-6 menu-item filter-@item_meal.Cate.Name.ToLower()">
                            <img src="@item_meal.Img" class="menu-img" alt="">
                            <div class="menu-content">
                                <a href="#">@item_meal.Name</a><span>$@item_meal.Price</span>
                            </div>
                            <div class="menu-ingredients">
